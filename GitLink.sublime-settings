            },
            "line_params": {
                "start": "#L",
                "separator": "-",
            },
        },
        "sourcehut": {
            "urls": {
                "source": "https://{domain}/{owner}/{repo}/tree/{revision}/item/{file}",
                "blame": "https://{domain}/{owner}/{repo}/blame/{revision}/{file}",
            },
            "line_params": {
                "start": "#L",
                "separator": "-",
            },
        },
        "sourceforge": {
            // SourceForge provides neither line anchors nor blame
            "urls": {
                "source": "https://sourceforge.net/p/{owner}/{repo}/ci/{revision}/tree/{file}",
                "blame": "https://sourceforge.net/p/{owner}/{repo}/ci/{revision}/tree/{file}",
            },
        },
